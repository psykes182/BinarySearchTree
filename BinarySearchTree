
package de.hska.iwi.ads.solution.tree;

import de.hska.iwi.ads.dictionary.AbstractBinaryTree;

import java.util.AbstractMap;
import java.util.Map;

public class BinarySearchTree<K extends Comparable<K>, V> extends AbstractBinaryTree<K, V> {


    @Override
    @SuppressWarnings("unchecked")
    public V get(Object o) {
        if (o == null) {  //wenn Objekt nicht vorhanden
            return null;
        }

        // Typ kompatibel?
        if (root != null && !root.entry.getKey().getClass().isInstance(o)) {
            return null;
        }

        K key = (K) o; // Typecast
        Node current = root;

        while (current != null) {
            int cmp = key.compareTo(current.entry.getKey());
            if (cmp == 0) {                        // wenn gleich: Wert wird zurückgegeben
                return current.entry.getValue();
            } else if (cmp < 0) {
                current = current.left;
            } else {
                current = current.right;
            }
        }
        return null;
    }


    @Override
    public V put(K key, V value) {
        if (key == null) {   // wenn Objekt nicht vorhanden
            return null;
        }

        if (root == null) {   //wenn kein Baum -> neue Wurzel
            root = new Node(key, value);
            return null;
        }

        Node current = root;
        Node parent = null;

        while (current != null) {     //Baum durchgehen bis ganz unten
            parent = current;
            int cmp = key.compareTo(current.entry.getKey());
            if (cmp == 0) {
                V oldValue = current.entry.getValue();  //wenn gleicher Wert: überschreiben und alten Wert ausgeben
                current.entry.setValue(value);
                return oldValue;
            } else if (cmp < 0) {
                current = current.left;
            } else {
                current = current.right;
            }
        }

        Node newNode = new Node(key, value); //neuen Knoten erzeugen, vergleichen: rechts oder links 
        int cmp = key.compareTo(parent.entry.getKey());
        if (cmp < 0) {
            parent.left = newNode;
        } else {
            parent.right = newNode;
        }

        return null;
    }
}
